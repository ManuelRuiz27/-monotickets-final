{
  "dashboard": {
    "id": null,
    "title": "Monotickets API Latency",
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 2,
    "editable": true,
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "datasource": {
            "type": "prometheus",
            "uid": "PROMETHEUS_DS"
          },
          "definition": "label_values(http_requests_total, service)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "current": {
            "selected": true,
            "text": "All",
            "value": ".*"
          }
        }
      ]
    },
    "panels": [
      {
        "type": "timeseries",
        "title": "p95 latency by route",
        "datasource": {
          "type": "prometheus",
          "uid": "PROMETHEUS_DS"
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_ms_bucket{service=~\"$service\"}[$__interval])) by (le, route))",
            "legendFormat": "{{route}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms"
          }
        },
        "gridPos": { "h": 10, "w": 24, "x": 0, "y": 0 }
      },
      {
        "type": "stat",
        "title": "Error rate (5xx %)",
        "datasource": {
          "type": "prometheus",
          "uid": "PROMETHEUS_DS"
        },
        "targets": [
          {
            "expr": "sum(rate(http_requests_5xx_total{service=~\"$service\"}[5m])) / sum(rate(http_requests_total{service=~\"$service\"}[5m]))",
            "legendFormat": "5xx"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "orange", "value": 0.02 },
                { "color": "red", "value": 0.05 }
              ]
            }
          }
        },
        "gridPos": { "h": 6, "w": 8, "x": 0, "y": 10 }
      },
      {
        "type": "timeseries",
        "title": "Queue backlog (jobs)",
        "datasource": {
          "type": "prometheus",
          "uid": "PROMETHEUS_DS"
        },
        "targets": [
          {
            "expr": "queue_backlog{service=~\"$service\",queue=~\"wa_outbound|wa_inbound|payments\"}",
            "legendFormat": "{{queue}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "orange", "value": 50 },
                { "color": "red", "value": 100 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 }
      },
      {
        "type": "timeseries",
        "title": "Queue failures (5m increase)",
        "datasource": {
          "type": "prometheus",
          "uid": "PROMETHEUS_DS"
        },
        "targets": [
          {
            "expr": "increase(jobs_failed_total{service=~\"$service\",queue=~\"wa_outbound|wa_inbound|payments\"}[5m])",
            "legendFormat": "{{queue}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "orange", "value": 1 },
                { "color": "red", "value": 5 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 24 }
      }
    ]
  }
}
