{
  "name": "monotickets",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "npm run lint --prefix backend && npm run lint --prefix frontend",
    "test": "npm run test --prefix backend && npm run test --prefix frontend",
    "test:ci": "npm run test:ci --prefix backend && npm run test:ci --prefix frontend",
    "test:e2e:all": "node ./tests/scripts/run-e2e.js",
    "test:e2e:health": "testsprite run -s health --out ./reports/junit",
    "test:e2e:guests": "testsprite run -s guests --out ./reports/junit",
    "test:e2e:guest": "node ./tests/scripts/run-e2e.js -t @confirm",
    "test:e2e:scan": "testsprite run -s scan --out ./reports/junit",
    "test:e2e:staff": "node ./tests/scripts/run-e2e.js -t @scan",
    "test:e2e:wa": "testsprite run -s wa --out ./reports/junit",
    "test:e2e:delivery": "testsprite run -t @delivery --out ./reports/junit",
    "test:e2e:director": "testsprite run -t @director --out ./reports/junit",
    "test:post": "node ./tests/scripts/collect-artifacts.js || true",
    "smoke:services": "bash ./infra/check-services.sh",
    "smoke:readiness": "bash ./infra/check-readiness.sh",
    "perf:scan": "k6 run tests/perf_k6/scan_spike.js",
    "perf:confirm": "k6 run tests/perf_k6/confirm_burst.js",
    "perf:scan50x30": "k6 run tests/perf_k6/scan_rps_50x30.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "dotenv": "^16.4.5"
  }
}
